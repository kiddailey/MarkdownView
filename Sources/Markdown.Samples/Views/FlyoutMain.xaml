<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Markdown.Samples.Views.FlyoutMain"
    xmlns:pages="clr-namespace:Markdown.Samples.Views" 
    FlyoutLayoutBehavior="Default" BackgroundColor="Black">
  <FlyoutPage.Flyout>
    <pages:SettingsPage />
  </FlyoutPage.Flyout>
  <FlyoutPage.Detail>
    <NavigationPage>
      <x:Arguments>
        <pages:SamplesPage />
      </x:Arguments>
    </NavigationPage>
  </FlyoutPage.Detail>
</FlyoutPage>